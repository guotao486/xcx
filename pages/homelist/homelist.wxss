page {
  background: #f7f7f7;
}
.container {
    width: 100%;
    padding:0;
    margin: 0;
}
.vux-tab {
  background:#fff;
  display: flex;
  height: 88rpx;
  position: relative;
}
.vux-tab-item {
  display: block;
  flex: 1;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background: linear-gradient(180deg,#e5e5e5,#e5e5e5,hsla(0,0%,90%,0)) 0 100% no-repeat;
  background-size: 100% 1px;
  font-size: 26rpx;
  text-align: center;
  line-height: 88rpx;
  color: #666;
}
.vux-tab .vux-tab-item.vux-tab-selected {
    color: #9c2831;
    border-bottom: 2rpx solid #9c2831;
}
.storylist{
  margin: 40rpx 25rpx;
}
.storyUl{
  position: relative;
  overflow: hidden;
}
.storyLl{
  margin-bottom: 30rpx;
}
.storyLl image{
  width: 100%;
  height: 420rpx;
  border-radius: 20rpx;
}
.storyLl-tit{
  margin: 15rpx 0;
}
.storyLl-p{
  background:#fca41c;
  padding:2px 5px;
  color:#fff;
  letter-spacing:2rpx;
  border-radius: 10rpx;
}
.storyLl-t{
  background:#3ab54b;
  padding:2px 5px;
  color:#fff;
  letter-spacing:2rpx;
  border-radius: 10rpx;
}
.storyLl-tit text{
  padding-left:20rpx;
  letter-spacing:2rpx;
  font-size: 29rpx;
}
.storyLl-img{
  padding:10rpx 0;
}
.storyLl-img .storyLl-img1{
  width:40rpx;
  height:30rpx;
  border-radius: 0rpx;
}
.storyLl-img text{
  padding:0 15rpx;
  color: #a7a7a7;
  font-size:26rpx;
  position: relative;
  top: -3rpx;
}
.storyLl-img .storyLl-img2{
  width:28rpx;
  height:32rpx;
  border-radius: 0rpx;
  padding-left:5rpx;
}
