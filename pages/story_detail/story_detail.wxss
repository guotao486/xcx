.wxParse-p{
   margin:20rpx 0px;
   white-space:normal;
   font-size:24rpx;
}
.ng-scope {
  font-size: 28rpx
}
.wxParse-img{
  max-width: 100%;
  height: auto;
  vertical-align: middle;
  border: 0;
}
.tn-Powered-by-XIUMI .wxParse-section{
  box-shadow:0px 0px 0px rgb(204,204,204);
}
.WxEmojiView{
  padding:10rpx 10rpx;
