}
.entry_title{
  font-size:32rpx;
  font-weight:bold!important;
  padding:20rpx;
}
.times{
  padding-left:20rpx;
  color:#565656;
  font-size:28rpx;
}
.footer-tabbar {
  position: fixed;
  bottom: 0;
  width: 100%;
}
.weui_tabbar {
  background-color: #fff;
  display: flex;
  position: absolute;
  z-index: 500;
  bottom: 0;
  width: 100%;
  height:100rpx;
  border-top:1px solid #ccc;
}
.footer-tabbar .weui_tabbar_item {
  text-decoration: none;
  padding-top:10rpx;
}
.weui_tabbar_item {
  display: block;
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  padding: 7px 0 0;
  -webkit-tap-highlight-color: transparent;
}
.weui_tabbar_icon {
  width: 48rpx;
  height: 48rpx;
  margin: 0 auto;
}
.weui_tabbar_icon image {
  display: block;
  width: 100%;
  height: 100%;
}
.footer-tabbar .weui_tabbar_label {
  margin-bottom: 10rpx!important;
  color: #888989!important;
  margin-top: 4rpx;
}
.weui_tabbar_label {
  text-align: center;
  display:block;
  font-size: 24rpx;
}
.reply{
  color:#972e32;
  text-decoration:none;
