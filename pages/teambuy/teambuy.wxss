/*订单信息  */
.item-detail{
  display:-webkit-box;
  width:100%;
  border-bottom:1px solid #e5e5e5;
  position:relative;
  padding:10px 0;
}
.item-img {
    width: 100px;
    margin: 0.16rem 0 0.16rem 0.32rem;
    background: #fff;
    overflow: hidden;
}
.imgs{
  display: inline;
}
.item-img navigator {
    display: block;
    height: 100px;
    line-height: 2.6rem;
    text-align: center;
    overflow: hidden;
}
.item-info {
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
    padding: 0.16rem 0.32rem;
    box-sizing: border-box;
}
