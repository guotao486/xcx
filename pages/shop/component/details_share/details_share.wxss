/* pages/shop/component/details_share/details_share.wxss */
page{
  margin: 0;
  padding: 0;
  font-family: '微软雅黑','宋体',sans-serif;
  font-size: 28rpx;
}
.conter{
  display: flex;
  align-items: center;
  justify-content: center;  
  width:100%;
  height:100%;
  /* position: absolute; */
  margin-top:90rpx;
}
.conterimg{
  box-shadow: 0rpx 0rpx 16rpx 6rpx #cccccc;
  position:relative;
}
.conterimg image{
  width:650rpx;
  height:900rpx;
  display:block;
}
.conterimg button{
  position:absolute; 
  left:0;
  right:0;
  bottom:-30rpx;
  padding:0;
  font-size: 24rpx;
  color: #fff;
  width:250rpx;
  height:75rpx;
  line-height:75rpx;
  background-color:#ff5555;
  letter-spacing:2rpx;
  border-radius: 40rpx;
}
.conterimg button::after{
  border: none;
}
.icon{
  display:flex;
  align-items:center;
  justify-content:center;
  width:100%;
  height:100%;
  margin-top:70rpx;
}
.icon image{
  width: 45rpx;
  height: 45rpx;
}
.icon text{
  color: #828282;
  font-size: 24rpx;
  margin-left: 10rpx;
  margin-top:6rpx;
  letter-spacing:1rpx;
}